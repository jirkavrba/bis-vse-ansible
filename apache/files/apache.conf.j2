<VirtualHost *:80>
    ServerAdmin {{ email }}
    ServerName {{ server_host }}
</VirtualHost>

<VirtualHost *:433>
    ServerAdmin {{ email }}
    ServerName {{ server_host }}

    DocumentRoot /var/www/{{ server_host }}

    ErrorLog ${APACHE_LOG_DIR}/error.log
    AccessLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>